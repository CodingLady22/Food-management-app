<%- include('partials/header') -%>

<section class="p-5 my-16 bg-[#f6f6f6]">
    <h1 class="ml-5 font-medium text-lg capitalize tracking-wide">Edit your comment</h1>
    <section class="mb-20">
        <ul>
            <% editComment.forEach(comment=> { %>
                <% if (comment._id == commentId ) { %>
                    <li>
                        <div class="bg-white mt-8 sm:mx-auto sm:w-full">
                            <div class="py-6 px-6 shadow rounded-lg sm:px-10">

                                <form action="/comments/update/<%= comment._id%>" method="POST">
                                    <label for="title" class="block mt-4 text-sm font-medium text-gray-700">Title</label>
                                    <input type="text" name="title" value="<%= comment.title %>" class="w-full border border-gray-300 my-2 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-[#2a3da9]
                                    focus:ring-1 focus:ring-[#2a3da9] caret-[#445ce2]">
                                    <label for="comment" class="block mt-4 text-sm font-medium text-gray-700">Comment</label>
                                    <textarea name="comment" id="" cols="30" rows="10" class="w-full border border-gray-300 my-2 px-3 p-2.5 whitespace-pre-line rounded-lg shadow-sm focus:outline-none focus:border-[#2a3da9] focus:ring-1 focus:ring-[#2a3da9] caret-[#445ce2]"><%= comment.comment %></textarea>
                                    <!-- submit button -->
                                    <button type="submit" class="w-1/2 py-2.5 px-5 bg-black/5 text-[#515070] text-base no-underline delay-100 tracking-wide mt-3 rounded shadow hover:bg-[#f6f6f6] hover:text-[#FF8E6E] hover:rounded-lg hover:shadow-lg">Save</button>
                                    <!-- cancel link -->
                                    <a href="/comments" class="bg-white border-[#DBD6D6] border-2 text-slate-800 mx-1 py-2 px-3 rounded-md w-[80px] text-center shadow hover:shadow-md hover:text-[#FF8E6E]">Cancel</a>
                                    <!-- delete link -->
                                    <a href="/comments/delete/<%= comment._id%>" class="bg-white border-[#DBD6D6] border-2 text-slate-800 mx-1 py-2 px-3 rounded-md w-[80px] text-center shadow hover:shadow-md hover:text-[#FF8E6E]">Delete</a>
                                </form>
                        
                            </div>
                        </div>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    </section>
</section>
