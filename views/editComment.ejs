<%- include('partials/header') -%>

<section>
    <h1>Edit your comment</h1>
    <section>
        <ul>
            <% editComment.forEach(comment=> { %>
                <% if (comment._id == commentId ) { %>
                    <li>
                        <form action="/comments/update/<%= comment._id%>" method="POST">
                            <label for="title">Title</label>
                            <input type="text" name="title" value="<%= comment.title %>">
                            <label for="comment">Comment</label>
                            <textarea name="comment" id="" cols="30" rows="10"><%= comment.comment %></textarea>
                            <button type="submit">Edit</button>
                            <a href="/comments">Cancel</a>
                            <a href="/comments/delete/<%= comment._id%>">Delete</a>
                        </form>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    </section>
</section>

<%- include('partials/footer') -%>