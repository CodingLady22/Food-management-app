<%- include('partials/header') -%>

<div class="container">
    <h2 class="bg-emerald-500 text-blue-600 w-52">Hello UserName</h2>
    <form action="/dashboard" method="POST">
        <input type="text" name="itemInput" placeholder="Item">
        <input type="number" name="quantity" placeholder="Quantity">
        <input type="text" name="unit" placeholder="Unit">
        <label for="expiry">Expiration date</label>
        <input type="date" name="expiry" placeholder="Expiry date">
        <button type="submit">Add New Item</button>
    </form>

    <ol class="box">
        <!-- Add contents later for inventory -->
                <% newItem.forEach(item=> { %>
                    <li>
                        <div>Item: <%= item.itemInput %></div>
                        <div>Quantity: <%= item.quantity %>
                            <%= item.unit %>
                        </div>
                        <!-- <div></div> -->
                        <div> Expires: <%= new Date(item.expiry).toLocaleDateString('en-GB', { year: 'numeric' , month: 'long' , day: '2-digit' }) %></div>
                        <div>Days to expiration: <%= daysLeft[newItem.indexOf(item)] %></div>
                        <a href="/edit/<%= item._id%>">Edit</a>
                        <a href="/delete/<%= item._id%>">Delete</a>
                    </li>
                <% }) %>
        
    </ol>




    <a href="#">Scan Barcode</a>
    <a href="/comments">Add Comment</a>
    <a href="/recipes">Add Recipes</a>
</div>



<%- include('partials/footer') -%>