<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/output.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    

    <!-- New login form -->

    <div class="min-h-screen bg-[#efccb6] flex justify-center items-center">
        <div class="p-8 flex-1">
            <div class="w-80 bg-white rounded-3xl mx-auto overflow-hidden shadow-xl">
                
                <!-- error messages -->
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el=> { %>
                        <div class="text-red-600">
                            <%= el.msg %>
                        </div>
                    <% }) %>
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el=> { %>
                        <div class="text-red-600">
                            <%= el.msg %>
                        </div>
                    <% }) %>
                <% } %>
    
                <div class="px-10 pt-4 pb-8 bg-white rounded-tr-4xl">
                    <h2 class="mt-0 mx-0 mb-8 text-[#515070] text-center font-semibold">Sign Up</h2>
                    <form action="/signup" method="POST">

                        <!-- User Name -->
                        <div class="relative">
                            <input type="text" name="userName" placeholder="User Name" required=""
                                class="peer h-10 mb-3 w-full border-b-2 border-gray-300 text-gray-900 placeholder-transparent focus:outline-none focus:border-[#e25f3a]">
    
                            <label for="userName"
                                class="absolute left-0 -top-3.5 text-gray-600 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">User Name</label>
                        </div>

                        <!-- Email -->
                        <div class="relative">
                            <input type="email" name="email" placeholder="Email" required=""
                                class="peer h-10 mb-3 w-full border-b-2 border-gray-300 text-gray-900 placeholder-transparent focus:outline-none focus:border-[#e25f3a]">
    
                            <label for="email"
                                class="absolute left-0 -top-3.5 text-gray-600 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Email</label>
                        </div>

                        <!-- Password -->
                        <div class="relative">
                            <input type="password" name="password" placeholder="Password" required=""
                                class="peer h-10 mb-3 w-full border-b-2 border-gray-300 text-gray-900 placeholder-transparent focus:outline-none focus:border-[#e25f3a]">
                        
                            <label for="password"
                                class="absolute left-0 -top-3.5 text-gray-600 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Password</label>
                        </div>

                        <!-- Confirm Password -->
                        <div class="relative">
                            <input type="password" name="confirmPassword" placeholder="Confirm Password" required=""
                                class="peer h-10 w-full border-b-2 border-gray-300 text-gray-900 placeholder-transparent focus:outline-none focus:border-[#e25f3a]">
                            <label for="confirmPassword"
                                class="absolute left-0 -top-3.5 text-gray-600 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Confirm Password</label>
                        </div>

                        <!-- submit button -->
                        <button type="sumbit" 
                            class="mt-20 px-4 py-2 rounded bg-[#FF8E6E] hover:bg-[#FFBB91] text-white font-semibold text-center block w-full focus:outline-none focus:ring focus:ring-offset-2 focus:ring-[#FF8E6E] focus:ring-opacity-80 cursor-pointer">
                            Submit
                        </button>
                    </form>
                    
                    <!-- links -->
                    <div class="flex flex-col">
                        <a href="/login"
                            class="mt-4 block text-sm text-center font-medium text-[#f07f60] hover:underline focus:outline-none focus:ring-2 focus:ring-[#e25f3a]">
                            Already have an account?
                        </a>
                        <a href="/"
                            class="mt-4 block text-sm text-center font-medium text-[#FF8E6E] hover:underline focus:outline-none focus:ring-2 focus:ring-[#e25f3a]">
                            Back to home page
                        </a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

</body>
</html>
